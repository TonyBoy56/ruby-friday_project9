<h3>The Volunteer: <%= @volunteer.name %></h3>

<form action="/projects/<%= @project.id %>/volunteers/<%= @volunteer.id %>" method="post">
  <input name="_method" type="hidden" value="patch">
  <label for="edit_volunteer">Change Your volunteer?</label>
  <input name="edit_volunteer" type="text">
  <button type="submit">Change</button>
</form>

<form action="/projects/<%= @project.id %>/volunteers/<%= @volunteer.id %>" method="post">
  <input name="_method" type="hidden" value="delete">
  <button type="submit" class="btn btn-warning">Delete</button>
</form>